      <div class="span9 home-post">
        <div class="content">

          <div class="module">
            <div class="module-head"><br><br>
              <h3 style="text-align: center;">Edit Your Story.</h3><hr>
            </div>

            <div class="module-body">
                <form class="form-horizontal row-fluid" method="post" action="/saveEdited">
									<input type="hidden" name="_id" value="<%= story._id %>">
									<div class="control-group">
                    <label class="control-label" for="basicinput">Title</label>
                    <div class="controls">
                      <input type="text" id="basicinput" value="<%= story.title %>" name="title" id="title" class="span8">
                    </div>
                  </div>
                  <div class="control-group">
                    <label class="control-label" for="basicinput">Full Story</label>
                    <div class="controls">
                      <textarea class="span8" name="story" id="story" rows="5">
                        <%= story.story %>
                      </textarea>
                    </div>
                  </div>

                  <!-- <div class="control-group">
